<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/marsOrange</item>
        <item name="colorPrimaryDark">@color/marsOrangeDark</item>
        <item name="colorAccent">@color/marsYellow</item>
        <item name="android:windowBackground">@color/blackBackground</item>
        <item name="android:textColor">@color/lightText</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">?attr/colorPrimary</item>
    </style>


    <style name="MainTitleText" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/lightText</item>
        <item name="android:textSize">@dimen/main_title_text_size</item>
    </style>

    <style name="MainCardViewText" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/main_cardview_text_size</item>
        <item name="android:paddingBottom">@dimen/main_cardview_text_padding_btm</item>
        <item name="android:textColor">@color/lightText</item>
        <item name="android:layout_gravity">bottom|center_horizontal</item>
    </style>

    <style name="RoverExploreCardViewText" parent="MainCardViewText">
        <item name="android:paddingTop">@dimen/main_cardview_text_padding_btm</item>
        <item name="android:layout_gravity">top|center_horizontal</item>
    </style>


    <style name="MissionManifestText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">@dimen/mission_manifest_text_size</item>
        <item name="android:textColor">@color/lightText</item>

    </style>

    <style name="MissionManifestTextLabel" parent="MissionManifestText">
        <item name="android:textStyle">bold</item>
        <item name="android:paddingEnd">@dimen/manifest_label_padding_end</item>
        <item name="android:textColor">@color/lightText</item>
    </style>

    <style name="CameraTextLabel" parent="TextAppearance.AppCompat.Display1">
        <item name="android:textSize">@dimen/camera_label_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_margin">@dimen/camera_label_margin</item>
        <item name="android:textColor">@color/lightText</item>
    </style>

    <style name="RoverPhotosTitle" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">@dimen/photos_title_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">@dimen/photos_title_top_margin</item>
        <item name="android:textColor">@color/lightText</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="ScienceTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/ScienceTabTextAppearance</item>
    </style>

    <style name="ScienceTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="RoverSciencePagerText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/rover_science_text_size</item>
        <item name="android:layout_margin">4dp</item>
    </style>

    <style name="MarsExploreTitleText" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/lightText</item>
        <item name="android:padding">@dimen/mars_explore_title_text_padding</item>
    </style>

    <style name="MarsWeatherText" parent="Base.TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/blackBackground</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MarsWeatherText.Label" parent="MarsWeatherText">
        <item name="android:textSize">@dimen/mars_weather_label_text_size</item>
        <item name="android:layout_marginStart">@dimen/mars_weather_label_margin_start</item>
    </style>

    <style name="MarsWeatherText.Detail" parent="MarsWeatherText">
        <item name="android:textSize">@dimen/mars_weather_detail_text_size</item>
        <item name="android:layout_marginStart">@dimen/mars_weather_detail_margin_start</item>
    </style>

    <style name="MarsFactsTextTitle" parent="TextAppearance.AppCompat.Display1">
        <item name="android:textColor">@color/lightText</item>
        <item name="android:textSize">@dimen/mars_fact_title_text_size</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="MarsFactsText" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">@dimen/mars_fact_text_size</item>
        <item name="android:layout_margin">@dimen/mars_fact_layout_margin</item>
    </style>

    <style name="MarsFactBottomLink" parent="Base.TextAppearance.AppCompat.Body2">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/lightText</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">@dimen/mars_fact_link_margin</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:padding">@dimen/mars_fact_link_margin</item>

    </style>

</resources>
