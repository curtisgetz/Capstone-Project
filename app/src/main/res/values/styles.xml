<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/marsOrange</item>
        <item name="colorPrimaryDark">@color/marsOrangeDark</item>
        <item name="colorAccent">@color/marsYellow</item>
    </style>


    <style name="MainTitleText" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/main_title_text_size</item>
    </style>

    <style name="MainCardViewText" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/main_cardview_text_size</item>
        <item name="android:paddingBottom">@dimen/main_cardview_text_padding_btm</item>
        <item name="android:textColor">@color/lightText</item>
        <item name="android:layout_gravity">bottom|center_horizontal</item>
    </style>

    <style name="RoverExploreCardViewText" parent="MainCardViewText">
        <item name="android:paddingTop">@dimen/main_cardview_text_padding_btm</item>
        <item name="android:layout_gravity">top|center_horizontal</item>
    </style>


    <style name="MissionManifestText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">@dimen/mission_manifest_text_size</item>

    </style>

    <style name="MissionManifestTextLabel" parent="MissionManifestText">
        <item name="android:textStyle">bold</item>
        <item name="android:paddingEnd">@dimen/manifest_label_padding_end</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
